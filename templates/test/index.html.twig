{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if categories is empty %}
        <p>il n'y a aucune categorie </p>
    {% else %}
        <table>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Action</th>
                <th>Supprimer</th>
                <th>Produits</th>

            </tr>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.titre }}</td>
                        <td>{{ category.description }}</td>
                        <td>
                            <a href="{{ path('category', {'id': category.id}) }}">voir</a>
                        </td>
                        <td>
                            <a href="{{ path('produits', {'categorie': category.titre}) }}" class="btn btn-primary">voir produits</a>
                        </td>
                        <td>
                            <a href="{{ path('category_delete', {'id': category.id}) }}" class="btn btn-danger">supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <h2>Ajouter une categorie</h2>

    {{ form(ajout) }}
{% endblock %}
